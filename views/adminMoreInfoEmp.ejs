<% include ./partial/header %>
<div
  class="col-sm-9"
  style="margin: 50px 125px;    text-align: -webkit-center; border: 1px solid purple"
>
  <form
    action="/admin/<%=admin.id%>/leave/<%=employee.id%>/info"
    metdirector="POST"
  >
    <div
      class="container-fluid bg-3 text-center"
      style="border: 1px solid blue"
    >
      <h1><%=employee.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img
            style="border-radius: 100%"
            src="<%=employee.image%>"
            alt="image"
          />
        </div>
        <%employee.leaves.forEach(function(leave){%>
        <div class="col-sm-4">
          <h3><strong> Subject:</strong><%=leave.subject %></h3>
          <h3>Status:<%=leave.adminstatus %></h3>
          <h3>From:<%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>To:<%=moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><%=leave.days%></h3>
          <h3>Email Id:<%=employee.Email%></h3>
          <h3>Department:<%=employee.department %></h3>
          <div style="float:inherit">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Decline"
            />
          </div>
        </div>

        <%})%>
      </div>
    </div>
  </form>
</div>
<% include ./partial/footer %>
